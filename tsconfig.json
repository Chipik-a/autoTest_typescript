{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": [
    "tests"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}
